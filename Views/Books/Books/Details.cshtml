@model LMS.Models.Book

@{
    ViewData["Title"] = "Book Details";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    @* <h2>@ViewData["Title"]</h2> *@
    <div class="container mt-5">
        <div class="row">
           
        
            <div class="col-md-9">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title">@Model.Title</h3>
                        
                    </div>
                    <div class="card-body" >
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.CoverImagePath))
                            {
                                <img src="@Model.CoverImagePath" alt="@Model.Title"
                                 class="img-fluid rounded shadow border"
                                   style="width:150px;height:auto"/>
                                @* <div class="card" style="width:160px height:auto;">
                                    <img src="@Model.CoverImagePath" alt="@Model.Title"
                                         class=" card-img-top align-middle-x">
                                </div> *@
                             }
                            else
                            {
                                <img src="/Covers/no-cover.png" alt="No Cover" class="img-fluid rounded shadow border">
                            }
                        </div>
                        <dl class="row">
                            <dt class="col-sm-4">Author:</dt>
                            <dd class="col-sm-8">@Model.Author</dd>
                            <dt class="col-sm-4">ISBN:</dt>
                            <dt class="col-sm-8">Published Date</dt>
                        
                            <p>
                                <strong>Category:</strong>
                                @Model.Category?.Name
                            </p>
                            <dt class="col-sm-4">Availability:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Checked Out</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
   </div>
</div>
<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
