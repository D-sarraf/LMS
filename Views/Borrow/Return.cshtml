@model LMS.ViewModels.ReturnViewModel
@{
    ViewData["Title"] = "Return Book";
}

<div class="container d-grid mt-5">
    <h2>Return Book</h2>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <strong>@Model.BookTitle</strong>
        </div>
        <div class="card-body">
            <p><strong>Borrower Name:</strong> @Model.BorrowerName</p>
            <p><strong>Borrow Date:</strong> @Model.BorrowDate</p>

            <form asp-action="Return" method="post">
                 @Html.AntiForgeryToken() 
                <input type="hidden" asp-for="BorrowRecordId" />
                <button type="submit" class="btn btn-success">Confirm Return</button>
                <a asp-action="Viewbooks"
                   asp-controller="Books"
                   class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>
<style>
    .action-btn {
        opacity: 0.75;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
    }

        .action-btn:hover {
            opacity: 1;
            transform: scale(1.05);
        }
</style>
