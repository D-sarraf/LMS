@model LMS.ViewModels.BorrowViewModel

@{
    ViewData["Title"] = "Borrow Book";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-sm border-0 rounded-3">

                <div class="card-header bg-primary text-white rounded-top-3">
                    <h4 class="mb-0 fw-semibold">
                        Borrow Book
                    </h4>
                </div>

                <div class="card-body p-4">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Book Title</label>
                        <input class="form-control rounded-end"
                               value="@Model.BookTitle"
                               readonly />
                    </div>

                    <form asp-action="Borrowit" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="BookId" />

                        <div class="mb-3">
                            <label asp-for="BorrowerName" class="form-label fw-semibold"></label>
                            <input asp-for="BorrowerName"
                                   class="form-control rounded-end"
                                   placeholder="Enter borrower name" />
                            <span asp-validation-for="BorrowerName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BorrowerEmail" class="form-label fw-semibold"></label>
                            <input asp-for="BorrowerEmail"
                                   class="form-control rounded-end"
                                   placeholder="Enter borrower email" />
                            <span asp-validation-for="BorrowerEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label fw-semibold"></label>
                            <input asp-for="Phone"
                                   class="form-control rounded-end"
                                   placeholder="Enter phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit"
                                    class="btn btn-primary rounded-end px-4 action-btn">
                                Confirm Borrow
                            </button>

                            <a asp-action="ViewBooks"
                               asp-controller="Books"
                               class="btn btn-secondary rounded-end px-4 action-btn">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .action-btn {
        opacity: 0.9;
        transition: all 0.2s ease-in-out;
    }

        .action-btn:hover {
            opacity: 1;
            transform: scale(1.04);
        }
</style>
