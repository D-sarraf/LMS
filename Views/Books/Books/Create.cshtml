@model LMS.Models.Book

@{
    bool isEdit = Model?.BookId > 0;
    ViewData["Title"] = isEdit ? "Edit Book" : "Add New Book";
    
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-book-fill"></i>
                        @(isEdit ? "Edit Book" : "Add New Book")
                    </h4>
                </div>

                <div class="card-body">
                    @* Success Message *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <form asp-action="@(isEdit ?"Edit" : "Create")"
                          asp-controller="Books"
                          method="post"
                          enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <input type="hidden"
                               asp-for="BookId" />
                         @* < asp-for="CoverImage"/> *@

                        <div class="mb-4">
                            <label class="form-label">Cover Image</label>
                            @if (isEdit && !string.IsNullOrEmpty(Model.CoverImagePath))
                            {
                                <div class="mb-2">
                                    <label class="d-sm-inline-block text-muted small">Current Cover:</label>
                                    <br />
                                    <img src="@Model.CoverImagePath" alt="Cover" style="width:100px; height:auto;" class="img-thumbnail" />
                                </div>
                            }
                            <input type="file"
                                   name="CoverImage"
                                   class="form-control"
                                   accept="image" />


                        </div>
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Author" class="form-label"></label>
                            <input asp-for="Author" class="form-control" placeholder="Enter author's name'" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ISBN" class="form-label"></label>
                            <input asp-for="ISBN" class="form-control"placeholder="e.g., 978-1234567890" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PublishDate" class="form-label"></label>
                            <input asp-for="PublishDate" type="date" class="form-control" />
                            <span asp-validation-for="PublishDate" class="text-danger"></span>
                        </div>
                       
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select asp-for="CategoryId"
                                    asp-items="ViewBag.Categories"
                                    class="form-select">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                            @* <div>DEBUG: @ViewBag.CategoryDebug</div>
                            @if (ViewBag.Categories != null)
                            {
                                <div>Categories loaded: OK</div> *@
                            }

                        </div>


                        <div class="d-flex justify-content-end">

                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save"></i>
                                @(isEdit ? "Update Book" : "Add Book" )
                            </button>
                            <a asp-action="ViewBooks" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
